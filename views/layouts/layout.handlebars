                    <li id="vehiclesPageHeader"><a>View all vehicles</a></li>
                    <li id="addVehicleHeader"><a>Add vehicle</a></li>
                </ul>

                <li data-toggle="collapse" data-target="#reportsMenu" class="collapsed">
                    <a><i class="fa fa-globe fa-lg"></i> Reports <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="reportsMenu">
                    <li id="reportsPageHeader"><a>View reports</a></li>
                </ul>
                <ul>
                    <a href="/users/logout">
                        <li id="logout">
                            <i class="fa fa-sign-out fa-lg"></i> Logout
                        </li>
                    </a>
                </ul>

                {{else}}
                <ul>
                    <a href="/users/login">
                        <li id="login" class="active">
                            <i class="fa fa-sign-in fa-lg"></i> Login
                        </li>
                    </a>
                </ul>
                <ul>
                    <a href="/users/register">
                        <li id="register" class="active">
                            <i class="fa fa-id-card-o fa-lg"></i> Register
                        </li>
                    </a>
                </ul>
                {{/if}}
            </ul>
        </div>
    </div>
    <!-- END nav menu -->

    <!-- container -->
    <div class="container-fluid">

        {{{body}}}

